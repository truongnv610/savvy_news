<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Savvy" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/red_FF0000</item>
        <item name="colorPrimaryVariant">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_FF0000</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/red_FF0000</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/blackMedium</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:textViewStyle">@style/Widget.Savvy.TextView</item>
    </style>

    <style name="Theme.Savvy.BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.Savvy.BaseTheme.Translucent">
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="O_MR1">shortEdges</item>
    </style>

    <style name="Theme.Savvy.SplashScreen">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- TextView Base -->

    <style name="Widget.Savvy.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="Widget.Savvy.TextView.Screen.Title" parent="Widget.Savvy.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Title" parent="Widget.Savvy.TextView">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="fontFamily">@font/prompt_medium</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Title.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Caption" parent="Widget.Savvy.TextView">
        <item name="android:textColor">@color/blackMedium</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/prompt_regular</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Price" parent="Widget.Savvy.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.ListPrice" parent="Widget.Savvy.TextView">
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/prompt_regular</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Label.Promotion" parent="Widget.Savvy.TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/bg_product_promotion</item>
        <item name="android:textSize">10sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/prompt_medium</item>
    </style>

    <style name="Widget.Savvy.TextView.Card.Label.Coupon" parent="Widget.Savvy.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:drawableStart">@drawable/ic_coupon_code</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="fontFamily">@font/prompt_medium</item>
    </style>

    <style name="Widget.Savvy.TextView.Category.Title" parent="Widget.Savvy.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="fontFamily">@font/prompt_regular</item>
    </style>

    <style name="Widget.Savvy.TextView.Input" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textColorHint">@color/blackLight</item>
        <item name="android:textCursorDrawable">@drawable/text_input_cursor</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sarabun_regular</item>
    </style>

    <style name="Widget.Savvy.TextView.Input.SearchBox" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">0dp</item>
        <item name="fontFamily">@font/prompt_medium</item>
    </style>

    <style name="Widget.Savvy.View.Divider" parent="">
        <item name="android:background">@color/greyWhite</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorOnSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>

    <style name="AppBarStyle" />

    <style name="Theme.Savvy.BaseTheme.Translucent.AppCollapsingToolbar">
        <item name="collapsedTitleTextAppearance">@style/AppBarCollapseTextAppearance</item>
        <item name="expandedTitleTextAppearance">@style/AppBarExpandedTextAppearance</item>
    </style>

    <style name="AppBarCollapseTextAppearance" parent="Theme.Savvy.BaseTheme.Translucent.AppCollapsingToolbar">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="AppBarExpandedTextAppearance" parent="Theme.Savvy.BaseTheme.Translucent.AppCollapsingToolbar">
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.MaterialComponents.Toolbar">
        <!--<item name="android:background">@color/white</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarFilterTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/prompt_medium</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarLoginTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="ToolbarTitleTextBlack" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="Theme.Savvy.AppBarOverlay" parent="Theme.Savvy.BaseTheme.Translucent">
        <item name="colorControlNormal">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Savvy.PopupOverlay" parent="Theme.Savvy.BaseTheme.Translucent">
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/red_FF0000</item>
        <item name="colorPrimaryVariant">@color/redDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red_FF0000</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="O_MR1">shortEdges</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize4DP" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize6DP" parent="">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8DP" parent="">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TabLayout.HomeBlog" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/red_FF0000</item>
        <item name="tabIndicatorColor">@color/red_FF0000</item>
        <item name="tabTextAppearance">@style/HomeBlog.Tab.TextAppearance</item>
    </style>

    <style name="HomeBlog.Tab.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/prompt_medium</item>
    </style>

    <style name="QuotationTextTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/prompt_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/rounded_top_corners</item>
    </style>

    <style name="ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonMedium" parent="MaterialButton.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OutlineButton" parent="MaterialButton.Medium">
        <item name="strokeWidth">@dimen/button_outline_stroke_width_dp</item>
    </style>

    <style name="MaterialButton.Medium" parent="MaterialButton">
        <item name="android:textAppearance">@style/TextAppearance.Button.Medium</item>
        <item name="android:padding">@dimen/button_medium_padding_dp</item>
        <item name="android:minHeight">@dimen/button_medium_min_height_dp</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button.Rounded</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="iconGravity">textStart</item>
        <item name="android:inset">@dimen/promotion_inset</item>
<!--        <item name="android:text">@string/promotion_detail_reserve</item>-->
        <item name="android:fontFamily">@font/prompt_regular</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button.Rounded</item>
        <item name="android:textColor">@color/colorTextContent</item>
        <item name="android:textSize">@dimen/text_header_16_sp</item>
        <item name="cornerRadius">@dimen/promotion_corner_size</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
        <item name="iconGravity">start</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="iconTint">@null</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="strokeColor">@color/colorMegaMenu</item>
    </style>

    <style name="ElevatedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_header_16_sp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Button.Rounded</item>
        <item name="fontFamily">@font/prompt_semi_bold</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.Button.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/promotion_corner_size</item>
    </style>

    <style name="TextAppearance.Button.Medium" parent="TextAppearance.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/prompt_regular</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="TextInputLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedTextInput</item>
    </style>

    <style name="TextInputJob" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="shapeAppearanceOverlay">@style/RoundedTextInput</item>
    </style>

    <style name="RoundedTextInput" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

</resources>